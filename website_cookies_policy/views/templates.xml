<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Layout -->
        <template id="layout" inherit_id="website.layout">
            <!-- Styles -->
            <xpath expr="//t[@t-call-assets='website.assets_frontend']" position="after">
                <t t-call-assets="website_cookies_policy.assets"/>
            </xpath>
        </template>

        <!-- Assets -->
        <template id="assets">
            <link rel='stylesheet' href='/website_cookies_policy/static/src/css/cookies.css' t-ignore="true"/>
        </template>

        <!-- Cookies Policy -->
        <template id="cookies_policy" inherit_id="website.layout">
            <xpath expr="//html/body/div[@id='wrapwrap']" position="inside">
                <div class="cookies-policy bottom dark">
                    <div class="cookies-policy-msg">We use cookies both own and 3rd party cookies to offer a better experience in our site. Continue navigating implies acceptance of our <a href="/page/cookies-policy" title="Cookies Policy">Cookies Policy</a>.</div>
                </div>
            </xpath>
        </template>

    </data>
</openerp>
