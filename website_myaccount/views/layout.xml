<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="menu">
            <div class="col-sm-3 myaccount-menu">
                <div class="panel panel-default">
                    <div class="panel-heading">My Account</div>
                    <div class="panel-body">
                        <ul class="nav nav-pills nav-stacked nav-sidebar">
                            <li role="presentation" t-att-class="'active' if currentOption == 'dashboard' else ''"><a href="#">Dashboard</a></li>
                            <li role="presentation" t-att-class="'active' if currentOption == 'profile' else ''"><a href="#">Profile</a></li>
                            <li role="presentation" t-att-class="'active' if currentOption == 'access-data' else ''"><a href="#">Access Data</a></li>
                            <li role="presentation" t-att-class="'active' if currentOption == 'addresses' else ''"><a href="#">Addresses</a></li>
                            <li role="presentation" t-att-class="'active' if currentOption == 'orders' else ''"><a href="#">Orders</a></li>
                            <li role="presentation" t-att-class="'active' if currentOption == 'invoices' else ''"><a href="#">Invoices</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </template>

        <template id="dashboard">
            <t t-call="website.layout">
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container myaccount-page mt32">
                        <div class="row">
                            <t t-call="website_myaccount.menu">
                                <t t-set="currentOption" t-value="'dashboard'"/>
                            </t>
                            <div class="col-sm-9 myaccount-dashboard">
                                <h1>Dashboard</h1>
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Username</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Mark</td>
                                            <td>Otto</td>
                                            <td>@mdo</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Jacob</td>
                                            <td>Thornton</td>
                                            <td>@fat</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>Larry</td>
                                            <td>the Bird</td>
                                            <td>@twitter</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
