<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="website_sale_wishlist_products.wishlist_list">
            <t t-call="website.layout">
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container oe_website_sale">
                        <h1 class="mb32">Lista de deseos</h1>
                        <div t-if="wishlist_products" class="row">
                            <div class="wishlist-products col-md-12">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 15%;"></th>
                                            <th style="width: 75%;">Producto</th>
                                            <th style="width: 10%;">Fecha</th>
                                            <th style="width: 10%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="wishlist_products" t-as="wishlist_product" class="wishlist-product">
                                            <td>
                                                <div class="oe_product_image">
                                                    <a itemprop="url" t-attf-href="/shop/product/{{ slug(wishlist_product.product_tmpl_id) }}">
                                                        <img itemprop="image" class="img img-responsive" t-attf-src="/website/image/product.template/#{wishlist_product.product_tmpl_id.id}/image#{'' if product_image_big else '?max_width=64&amp;max_height=64'}"/>
                                                    </a>
                                                </div>
                                            </td>
                                            <td><span t-field="wishlist_product.product_tmpl_id.name"/></td>
                                            <td><span t-field="wishlist_product.create_date"/></td>
                                            <td><a href="" itemprop="url" class="wishlist-products-remove" t-att-wishlist_product_id="wishlist_product.id">Eliminar</a></td>
                                        </tr>                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <p t-if="not wishlist_products">No hay productos en la lista.</p>
                        <p>
                            <a t-if="wishlist_products" href="/shop/cart" class="btn btn-primary wishlist-products-add-to-cart-all">Añadir todos al carrito</a>
                            <a t-if="wishlist_products" href="/shop/wishlist/empty" class="btn btn-default wishlist-products-empty" t-att-wishlist_id="wishlist_id">Vaciar lista</a>
                            <a href="javascript:history.back();" class="btn btn-default">Volver</a>
                        </p>
                    </div>
                </div>
            </t>
        </template>

        <template id="website_sale_wishlist_products.wishlist" inherit_id="website_sale.products_item" name="Añadir a la lista">
            <xpath expr="//section" position="inside">
                <a href="" class="btn wishlist-products-add" t-att-product_tmpl_id="product.id"><i class="glyphicon glyphicon-heart"></i></a>
            </xpath>
        </template>

        <template id="website_sale_wishlist_products.assets_frontend" inherit_id="website.assets_frontend">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/website_sale_wishlist_products/static/src/js/wishlist.js"></script>
            </xpath>
        </template>
    </data>
</openerp>
