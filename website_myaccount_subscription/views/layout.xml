<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="menu" inherit_id="website_myaccount.menu">
            <xpath expr="//li[@role='presentation'][last()]" position="after">
                <li role="presentation"
                    t-att-class="'active' if currentOption == 'subscriptions' else ''"><a href="/myaccount/subscriptions">Subscriptions</a></li>
            </xpath>
        </template>

        <template id="subscriptions">
            <t t-call="website.layout">
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container myaccount-page mt32">
                        <div class="row">
                            <t t-call="website_myaccount.menu">
                                <t t-set="currentOption"
                                   t-value="'subscriptions'"/>
                            </t>
                            <div class="col-sm-9 myaccount-dashboard">
                                <h1>Orders</h1>
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Training</th>
                                            <th>Date Start</th>
                                            <th>Date Stop</th>
                                            <th>Remaining Days</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="subscriptions"
                                           t-as="subscription">
                                            <tr>
                                                <td><span
                                                        t-field="subscription.training_id.name"/></td>
                                                <td><span
                                                        t-field="subscription.date_init"/></td>
                                                <td><span
                                                        t-field="subscription.date_end"/></td>
                                                <td><span
                                                        t-field="subscription.remaining_days"/></td>

                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
